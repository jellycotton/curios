{
  "manifest_version": 3,
  "name": "Veritas Lens",
  "version": "0.1.0",
  "description": "選択したテキストを右クリックして、リアルタイムでファクトチェックします。",
  "permissions": [
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"] // ★ CSSファイルを追加
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["VeritasLens.png"],
      "matches": ["<all_urls>"]
    }
  ]
}